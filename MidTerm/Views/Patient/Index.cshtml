@model IEnumerable<MidTerm.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Medications)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.MedicalHistory)
            </td>
            <td>
                    <img src="@item.ImageUrl" alt="Patient Image" style="max-width: 100px; height: auto;" />
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" asp-route-species="@item.Species">Details</a>

                @if (User.IsInRole("Admin"))
                {
      
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                       
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                   
                }
                 </td>
           
        </tr>
}
    </tbody>
</table>